{
    "compilerOptions": {
        "lib": [
            "dom"
        ],
        "target": "es3",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "declaration": false,
        "outDir": "build",
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "schema"
    ]
}